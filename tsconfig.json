{
  "compilerOptions": {
    "lib": ["es6", "dom", "es2016", "es2017"],
    "target": "es6",
    "module": "es6",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "experimentalDecorators": true,
    "outDir": "./built/",
    "sourceMap": true,
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "paths": {
    "~/*": ["./src/*"],
    "@/*": ["./src/*"]
  },
  "include": ["./src/**/*"]
}
