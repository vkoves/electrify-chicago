{
  "extends": ["stylelint-config-standard-scss"],
  "plugins": ["stylelint-scss"],
  "rules": {
    "length-zero-no-unit": true,
    "unit-disallowed-list": ["px"],
    "color-hex-length": "long",
    "color-no-hex": true,
    "color-named": "never",
    "declaration-property-value-disallowed-list": {
      "/^color$/": ["/^#/"],
      "/^background-color$/": ["/^#/"],
      "/^border-color$/": ["/^#/"],
      "/^border$/": ["/^.*#/"],
      "/^border-top$/": ["/^.*#/"],
      "/^border-right$/": ["/^.*#/"],
      "/^border-bottom$/": ["/^.*#/"],
      "/^border-left$/": ["/^.*#/"],
      "/^outline-color$/": ["/^#/"],
      "/^box-shadow$/": ["/^.*#/"],
      "/^text-shadow$/": ["/^.*#/"]
    },
    "font-family-name-quotes": ["always-where-recommended", {"severity": "warning"}],
    "function-url-quotes": ["always", {"severity": "warning"}],
    "selector-attribute-quotes": ["always", {"severity": "warning"}],
    "no-descending-specificity": [true, {"severity": "warning"}],
    "selector-class-pattern": [null, {"severity": "warning"}],
    "rule-empty-line-before": [null, {"severity": "warning"}],
    "shorthand-property-no-redundant-values": [true, {"severity": "warning"}],
    "declaration-empty-line-before": [null, {"severity": "warning"}],
    "comment-empty-line-before": [null, {"severity": "warning"}],
    "scss/dollar-variable-pattern": [null, {"severity": "warning"}],
    "scss/dollar-variable-empty-line-before": [null, {"severity": "warning"}],
    "scss/double-slash-comment-empty-line-before": [null, {"severity": "warning"}],
    "declaration-block-no-duplicate-properties": [true, {"severity": "warning"}],
    "color-function-alias-notation": [null, {"severity": "warning"}],
    "alpha-value-notation": [null, {"severity": "warning"}]
  },
  "ignoreFiles": [
    "node_modules/**/*",
    "dist/**/*",
    "build/**/*",
    "coverage/**/*",
    "**/*.vue"
  ]
}